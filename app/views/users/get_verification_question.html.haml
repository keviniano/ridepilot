#page-header.clearfix
  %h1
    = translate_helper('answer_verification_questions_heading')


=form_for :answer_verification_question, url: answer_verification_question_user_path(@user) do |f|
  =f.text_field :verification_question_id, value: @question.id, class: 'hidden'
  .row.col-sm-6
    .form-group.col-sm-12
      = f.label :answer, @question.question, class: "col-md-5 control-label"
      .col-md-7
        =f.text_field :answer, class: "form-control"
    .form-group.col-sm-12
      =f.submit translate_helper("submit_answer_verification_questions_form"), class: 'btn btn-primary'
