var prev_run_id = <%= params[:prev_run_id] || false %> || null;
<% if @scheduler.errors.empty? %>
  var trip_id = <%= params[:trip_id] || false %> || null;
  <% if @prev_run.present? %>
    $('#run_trips_panel_' + prev_run_id).replaceWith("<%= j render('recurring_dispatchers/run_trips_panel', run: @prev_run) %>");
    $('#runs_panel table tbody tr[data-run-id=' + prev_run_id + '] td.trips_count').html(<%= @prev_run.reload.weekday_assignments.for_wday(@day_of_week).count%>);
  <% else %>
    $('#unassigned_trips_table').find('tr[data-trip-id=' + trip_id + ']').remove();
    $('#unassigned_trips_panel .panel-title').html("<%= j render('recurring_dispatchers/unassigned_trips_panel_title') %>");
  <% end %>

  var run_id = <%= params[:run_id] || false %> || null;
  if(run_id) {
    $('#run_trips_panel_' + run_id).replaceWith("<%= j render('recurring_dispatchers/run_trips_panel', run: @run) %>");
    $('#runs_panel table tbody tr[data-run-id=' + run_id + '] td.trips_count').html(<%= @run.reload.weekday_assignments.for_wday(@day_of_week).count%>);
  }
<% else %>
  if(prev_run_id) {
    // as this is triggered by sortable, so need to revert
    $("#run_trips_panel_" + prev_run_id + " table tbody").sortable('cancel');
  }
  bootbox.alert("<%= @scheduler.errors.join('.<br>')%>");
<% end %>